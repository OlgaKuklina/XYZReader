<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/details_card_view_margin_general"
    android:layout_marginRight="@dimen/details_card_view_margin_general"
    android:layout_marginTop="@dimen/details_card_view_margin_general"
    android:layout_marginBottom="@dimen/details_card_view_margin_general"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:contentDescription="@string/post_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_article_padding_general"
            android:paddingTop="@dimen/details_article_padding_general"
            android:paddingRight="@dimen/details_article_padding_general"
            android:paddingBottom="@dimen/details_article_title_padding_bottom"
            android:ellipsize="end"
            android:maxLines="4"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_article_padding_general"
            android:paddingRight="@dimen/details_article_padding_general"
            android:paddingBottom="@dimen/details_article_padding_general"
            android:textColor="@color/secondary_text_color"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>